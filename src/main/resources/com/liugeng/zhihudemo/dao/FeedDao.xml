<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.liugeng.zhihudemo.dao.FeedDao">
  <sql id="table">feed</sql>
  <select id="getFeedByUsers" resultType="com.liugeng.zhihudemo.pojo.Feed">
    SELECT * 
    FROM <include refid="table"/>
      WHERE id &lt; #{maxId}
    <if test="users.size() != 0">
      AND user_id in
        <foreach collection="users" index="index" item="item" open="(" separator="," close=")">
          #{item}
        </foreach>
    </if>
    ORDER BY id DESC
    LIMIT #{count}
  </select>
</mapper>